{
  "name": "tmdb",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=14.0"
  },
  "type": "module",
  "scripts": {
    "start": "npm run build && NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "build": "npm run clean && npm run build:html && npm run build:css && npm run build:js && npm run build:assets",
    "build:html": "find src -name '*.html' -type f -exec cp {} dist \\;",
    "build:css": "mkdir dist/styles/ && cp -a src/styles/. dist/styles/",
    "build:js": "mkdir dist/scripts/ && cp -a src/scripts/. dist/scripts/",
    "build:assets": "mkdir dist/assets/ && cp -a src/assets/. dist/assets/",
    "clean": "rm -rf dist/ && mkdir dist/"
  },
  "author": "A. Toufali",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
